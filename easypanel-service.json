{
  "name": "CRM Restaurante",
  "description": "Sistema de gesti√≥n de reservas para restaurantes",
  "version": "1.0.0",
  "author": "CRM Team",
  "website": "https://your-domain.com",
  "icon": "https://your-domain.com/icon.png",
  "docker": {
    "image": "crm-restaurant:latest",
    "ports": {
      "3000": "0"
    },
    "volumes": {
      "/app/public/uploads": "/var/www/uploads",
      "/app/backups": "/backups"
    },
    "environment": {
      "NODE_ENV": "production",
      "DATABASE_URL": "${DATABASE_URL}",
      "REDIS_URL": "${REDIS_URL}",
      "JWT_SECRET": "${JWT_SECRET}",
      "REFRESH_TOKEN_SECRET": "${REFRESH_TOKEN_SECRET}",
      "NEXTAUTH_SECRET": "${NEXTAUTH_SECRET}",
      "NEXTAUTH_URL": "${NEXTAUTH_URL}",
      "NEXT_PUBLIC_APP_URL": "${NEXT_PUBLIC_APP_URL}",
      "EMAIL_HOST": "${EMAIL_HOST}",
      "EMAIL_PORT": "${EMAIL_PORT}",
      "EMAIL_USER": "${EMAIL_USER}",
      "EMAIL_PASSWORD": "${EMAIL_PASSWORD}",
      "EMAIL_FROM": "${EMAIL_FROM}",
      "SENTRY_DSN": "${SENTRY_DSN}",
      "PORT": "3000",
      "HOSTNAME": "0.0.0.0"
    }
  },
  "services": {
    "postgres": {
      "image": "postgres:15-alpine",
      "ports": {
        "5432": "0"
      },
      "volumes": {
        "/var/lib/postgresql/data": "/var/lib/postgresql/data"
      },
      "environment": {
        "POSTGRES_DB": "restaurant_crm",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "${POSTGRES_PASSWORD}"
      }
    },
    "redis": {
      "image": "redis:7-alpine",
      "ports": {
        "6379": "0"
      },
      "volumes": {
        "/data": "/data"
      },
      "command": "redis-server --appendonly yes --requirepass ${REDIS_PASSWORD}"
    }
  },
  "scripts": {
    "deploy": "bash scripts/easypanel-deploy.sh",
    "backup": "bash scripts/easypanel-backup.sh",
    "migrate": "bash scripts/easypanel-init-db.sh",
    "logs": "docker logs -f crm-restaurant"
  },
  "health": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "resources": {
    "memory": "1G",
    "cpu": "0.5"
  },
  "scaling": {
    "min": 1,
    "max": 3,
    "target": 70
  },
  "monitoring": {
    "enabled": true,
    "metrics": [
      "cpu",
      "memory",
      "disk",
      "network"
    ],
    "alerts": {
      "cpu": 80,
      "memory": 85,
      "disk": 90
    }
  },
  "backup": {
    "enabled": true,
    "schedule": "0 2 * * *",
    "retention": 30,
    "location": "/backups"
  },
  "ssl": {
    "enabled": true,
    "auto": true,
    "email": "admin@your-domain.com"
  },
  "networking": {
    "mode": "bridge",
    "expose": true,
    "dynamicPorts": true
  }
}